<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detalle_lista_contacto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.example.chino.courselabasico.DetalleListaContacto">

    <include
        android:id="@+id/mytoolbar"
        layout="@layout/activity_action_bar"
        ></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvNombreContacto"
        android:text="@string/nombre"
        android:textStyle="bold"
        android:textSize="30dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textColor="@color/colorAccent"
        />

    <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
  >
 </LinearLayout>

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/linear1"
        tools:ignore="UseCompoundDrawables"
        android:onClick="llamar "
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgLLamanada"
            android:text="Nota Corte 1 : "
            android:textSize="20dp"
            android:contentDescription="btnLLamada"
            android:layout_gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCorte1"
            android:text="@string/telefono"

            android:textSize="20dp"

            />
    </LinearLayout>
    <!--corte2-->
    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/linear2"
        tools:ignore="UseCompoundDrawables"
        android:onClick="llamar "
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nota Corte 2 : "
            android:textSize="20dp"
            android:contentDescription="btnLLamada"
            android:layout_gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCorte2"
            android:text="@string/telefono"

            android:textSize="20dp"

            />
    </LinearLayout>
<!--corte3-->
    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        tools:ignore="UseCompoundDrawables"
        android:onClick="llamar "
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nota Corte3 : "
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCorte3"
            android:text="@string/telefono"

            android:textSize="20dp"

            />
    </LinearLayout>


</LinearLayout>
